<!-- Outer Row -->
<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <h1 class="text-logo"><a href="/"><%= image_tag 'logo.png', class: 'registration-logo' %><span>OrdBot</span></a></h1>
                <h1 class="h4 text-gray-900 mb-4"><%= t "devise.invitations.edit.header" %></h1>
              </div>
              <%= form_for(resource, html: { method: :put, class: 'user' }, as: resource_name, url: invitation_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :invitation_token, readonly: true %>
                <% if f.object.class.require_password_on_accepting %>
                  <%- password_placeholder = "Password" %>
                  <% if @minimum_password_length %>
                    <%- password_placeholder += " (#{@minimum_password_length} characters minimum)" %>
                  <% end %>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "new-password", class:'form-control form-control-user', placeholder:password_placeholder %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control form-control-user', placeholder:"Repeat Password" %>
                  </div>
                <% end %>
                <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary btn-user btn-block" %>
              <% end %>
              <hr>
              <div class="text-center">
                <%= link_to "Forgot Password?", new_password_path(resource_name), class:'small' %><br />
              </div>
              <div class="text-center">
                <%= link_to "Already have an account? Login!", new_user_session_path, class:'small' %><br />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
