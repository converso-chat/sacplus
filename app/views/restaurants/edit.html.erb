<p id="notice"><%= notice %></p>

<div class="card shadow mb-4">
  <div class="card-body">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="restaurant-details-tab" data-toggle="tab" href="#restaurant-details" role="tab" aria-controls="restaurant-details" aria-selected="false">Restaurant</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="restaurant-users-tab" data-toggle="tab" href="#restaurant-users" role="tab" aria-controls="restaurant-users" aria-selected="false">Users</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane show active" id="restaurant-details" role="tabpanel" aria-labelledby="restaurant-details-tab">
        <br/>
        <%= render 'form', restaurant: @restaurant %>
      </div>
      <div class="tab-pane show" id="restaurant-users" role="tabpanel" aria-labelledby="restaurant-users-tab">
        <br/>
        <%= render 'restaurant_users' %>
      </div>
    </div>
  </div>
</div>
