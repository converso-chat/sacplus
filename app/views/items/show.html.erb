<p id="notice"><%= notice %></p>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Produto</h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-6">
        <p>
          <strong>Nome:</strong>
          <%= @item.name %>
        </p>

        <p>
          <strong>Preço:</strong>
          <%= @item.cost %>
        </p>

        <p>
          <strong>Categoria:</strong>
          <%= @item.category %>
        </p>

        <p>
          <strong>Descrição:</strong>
          <%= @item.description %>
        </p>

        <p>
          <strong>Restaurante:</strong>
          <%= @item.restaurant_id %>
        </p>
      </div>
    </div>
  </div>
</div>

