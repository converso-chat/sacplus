<body>

  <main id="main">
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
      <div class="container d-flex align-items-center">
        <div class="logo mr-auto">
          <h1 class="text-light"><a href="#hero"><%= image_tag 'logo.png' %><span>SAC Plus</span></a></h1>
