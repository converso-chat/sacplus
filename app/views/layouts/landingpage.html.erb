        <div class="col-lg-6">
          <nav class="footer-links text-lg-right text-center pt-2 pt-lg-0">
            <a href="/" class="scrollto">Home</a>
            <a href="/help" class="scrollto">Help</a>
            <a href="https://github.com/tarunvelli/ordbot" target="_blank" >Github</a>
          </nav>
        </div>
      </div>
    </div>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top">
    <span>
      <i class="fa fa-caret-square-up fa-3x"></i>
    </span>
  </a>

  <%= javascript_pack_tag 'landing-page' %>
</body>
</html>
