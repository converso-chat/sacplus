            <li class="active"><a href="#hero">Home</a></li>
            <li><a href="#about">Sobre</a></li>
            <li><a href="#features">Recursos</a></li>
            <li><a href="#faq">Perguntas e Respostas</a></li>
            <li><a href="#contact">Contato</a></li>
            <!--<li><a href="/help">Ajuda</a></li>-->
